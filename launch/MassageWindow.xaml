<Window x:Class="launch.MassageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:launch"
        Title="MassageWindow"       
        mc:Ignorable="d" Height="470" Width="400" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Grid Background="{StaticResource EntryWindowBG}" Panel.ZIndex="0">
            <Grid.Effect>
                <BlurEffect Radius="6"/>
            </Grid.Effect>
        </Grid>
        <StackPanel Background="Transparent" Height="50" VerticalAlignment="Top" MouseDown="StackPanel_MouseDown"/>
        <Grid Height="60" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Иконка сообщения -->
            <Image x:Name="messageIcon" Width="40" Height="40" Margin="50,5,0,5" 
                   Grid.Column="0" Visibility="Collapsed">
                <Image.ToolTip>
                    <ToolTip Placement="Left" PlacementRectangle="0,20,40,40" VerticalOffset="-20" Background="#8B2B8B" BorderBrush="White" BorderThickness="3">
                        <TextBlock Name="title" FontSize="24" Text="удалить" Style="{StaticResource BtnText}"/>
                    </ToolTip>
                </Image.ToolTip>
            </Image>

            <!-- Кнопки управления -->
            <StackPanel Grid.Column="2" Width="100" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="50" Name="Collapse" Click="Collapse_Click">
                    <Button.Resources>
                        <ImageSource x:Key="Img">Views/Images/BtnCollapse.png</ImageSource>
                        <ImageSource x:Key="ImgTrig">Views/Images/BtnCollapseTrig.png</ImageSource>
                    </Button.Resources>
                </Button>
                <Button Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="50" Name="Clouze" Click="Clouze_Click">
                    <Button.Resources>
                        <ImageSource x:Key="Img">Views/Images/BtnExit.png</ImageSource>
                        <ImageSource x:Key="ImgTrig">Views/Images/BtnExitTrig.png</ImageSource>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>


        <Grid Margin="0,70,0,0">
            <!-- Текст с прокруткой -->
            <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="50,0,50,160">
                <TextBlock Name="messageText"
                          TextWrapping="Wrap" 
                          Style="{StaticResource BtnText}"/>
            </ScrollViewer>
            <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,40">
                <Button Name="btnYes" Width="300" Height="55" Content="да" 
                        Style="{StaticResource ImageButton}"
                        Visibility="Collapsed"/>
                <Button Name="btnNo" Width="300" Height="55" Content="нет" 
                        Style="{StaticResource ImageButton}" 
                        Visibility="Collapsed"/>
                <Button Name="btnOk" Width="300" Height="55" Content="ок" 
                        Style="{StaticResource ImageButton}"/>
                <Button Name="btnCancel" Width="300" Height="55" Content="отмена" 
                        Style="{StaticResource ImageButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

<Page x:Class="launch.Views.AdminHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:launch.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="880"
      Title="AdminHome">

    <Grid>
        <Grid Background="{StaticResource BG}" Panel.ZIndex="0">
            <Grid.Effect>
                <BlurEffect Radius="5"/>
            </Grid.Effect>
        </Grid>

        <StackPanel Orientation="Horizontal" >
            <StackPanel Margin="40 0 40 0" Height="500" HorizontalAlignment="Left">
                <Grid Width="250" Height="60" Margin="0 0 0 20">
                    <Border Background="#8B2B8B" Opacity="0.5"/>
                    <TextBlock  Text="Количество:" FontSize="34" Style="{StaticResource BtnText}" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="20 10 0 0"/>
                </Grid>
                <Grid Width="250" Height="120">
                    <Border Background="#8B2B8B" Opacity="0.5"/>
                    <Image Source="Images/MenuBtnUsers.png" Width="90" Height="90" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Margin="20 0 0 15">
                        <Image.ToolTip>
                            <ToolTip Placement="Left" PlacementRectangle="0,0,90,90" VerticalOffset="25" Background="#8B2B8B" BorderBrush="White" BorderThickness="4">
                                <TextBlock Text="пользователи" Style="{StaticResource BtnText}"/>
                            </ToolTip>
                        </Image.ToolTip>
                    </Image>
                    <TextBlock Name="usersCount" Text="150" FontSize="38" Style="{StaticResource BtnText}" VerticalAlignment="Bottom" Margin="120 0 0 35" />
                </Grid>
                <Grid Width="250" Height="120" Margin="0 25 0 25">
                    <Border Background="#8B2B8B" Opacity="0.5"/>
                    <Image Source="Images/MenuBtnNews.png" Width="90" Height="90" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Margin="20 0 0 15">
                        <Image.ToolTip>
                            <ToolTip Placement="Left" PlacementRectangle="0,0,90,90" VerticalOffset="25" Background="#8B2B8B" BorderBrush="White" BorderThickness="4">
                                <TextBlock Text="новости" Style="{StaticResource BtnText}"/>
                            </ToolTip>
                        </Image.ToolTip>
                    </Image>
                    <TextBlock Name="newsCount" Text="12" FontSize="38" Style="{StaticResource BtnText}" VerticalAlignment="Bottom" Margin="120 0 0 35" />
                </Grid>
                <Grid Width="250" Height="120">
                    <Border Background="#8B2B8B" Opacity="0.5"/>
                    <Image Source="Images/MenuBtnAssembly.png" Width="90" Height="90" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Margin="20 0 0 15">
                        <Image.ToolTip>
                            <ToolTip Placement="Left" PlacementRectangle="0,0,90,90" VerticalOffset="25" Background="#8B2B8B" BorderBrush="White" BorderThickness="4">
                                <TextBlock Text="сборки" Style="{StaticResource BtnText}"/>
                            </ToolTip>
                        </Image.ToolTip>
                    </Image>
                    <TextBlock Name="assemblyCount" Text="10" FontSize="38" Style="{StaticResource BtnText}" VerticalAlignment="Bottom" Margin="120 0 0 35" />
                </Grid>
            </StackPanel>
            <StackPanel Height="500" HorizontalAlignment="Left">
                <Grid Width="500" Height="130" Margin="0 0 0 20">
                    <Border Background="#8B2B8B" Opacity="0.5"/>
                    <TextBlock Text="Самая залайканая новость:" FontSize="34" Style="{StaticResource BtnText}" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="20 10 0 0"/>
                    <Image Source="Images/btnLiked.png" Width="70" Height="70" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Margin="20 0 0 15"/>
                    <TextBlock Name="nameNewsLiked" Text="Меч семи проклятий" FontSize="34" Style="{StaticResource BtnText}" VerticalAlignment="Bottom" Margin="110 0 0 45"/>
                    <TextBlock Name="likeCount" Text="129 лайков" FontSize="34" Style="{StaticResource BtnText}" VerticalAlignment="Bottom" Margin="110 0 0 10" />
                </Grid>
                <Grid Width="500" Height="130" Margin="0 0 0 20">
                    <Border Background="#8B2B8B" Opacity="0.5"/>
                    <TextBlock Text="Самая задизлайканая новость:" FontSize="34" Style="{StaticResource BtnText}" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="20 10 0 0"/>
                    <Image Source="Images/btnDisLiked.png" Width="70" Height="70" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Margin="20 0 0 15"/>
                    <TextBlock Name="nameNewsDisliked" Text="Меч семи проклятий" FontSize="34" Style="{StaticResource BtnText}" VerticalAlignment="Bottom" Margin="110 0 0 45"/>
                    <TextBlock Name="dislikeCount" Text="78 дизлайков" FontSize="34" Style="{StaticResource BtnText}" VerticalAlignment="Bottom" Margin="110 0 0 10" />
                </Grid>
                <Grid Width="500" Height="190" Margin="0 0 0 20">
                    <Border Background="#8B2B8B" Opacity="0.5"/>
                    <TextBlock  Text="Часто приобретаемая подписка:" FontSize="34" Style="{StaticResource BtnText}" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="20 10 0 0"/>
                    <Grid Margin="15 50 15 15" Background="#551f61">
                        <Image Name="imageSub" Source="Images/StarNether.png"  HorizontalAlignment="Right" Margin="0 15 25 15" Opacity="0.5"/>
                        <TextBlock Name="nameSub" Text="железо" FontSize="36" Style="{StaticResource BtnText}" VerticalAlignment="Bottom" Margin="30 0 0 65"/>
                        <TextBlock Name="subCount" Text="78 активных подписок" FontSize="32" Style="{StaticResource BtnText}" VerticalAlignment="Bottom" Margin="30 0 0 25" />
                    </Grid>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

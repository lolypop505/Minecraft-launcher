<Page x:Class="launch.Views.News"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:launch.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="880"
      Title="News">

    <Grid>
        <Grid Background="{StaticResource BG}" Panel.ZIndex="0">
            <Grid.Effect>
                <BlurEffect Radius="5"/>
            </Grid.Effect>
        </Grid>

        <Border Background="#8B2B8B" Opacity="0.5" Margin="80 60 80 60"/>

        <StackPanel Margin="100 80 100 70" Panel.ZIndex="2">
            <Grid>
                <TextBlock Name="nameNews" Text="Лезвие бурова" Style="{StaticResource BtnText}" FontSize="42" HorizontalAlignment="Left"/>
                <TextBlock Name="dateNews" Text="10.09.25" Style="{StaticResource BtnText}" FontSize="38" HorizontalAlignment="Right"/>
            </Grid>

            <StackPanel Orientation="Horizontal">
                <Image Height="200" Name="imageNews1" Source="Images/background.png" Width="330" Stretch="Fill"/>
                <Image Height="200" Name="imageNews2" Source="Images/background.png" Width="330" Stretch="Fill" Margin="20 0 0 0"/>
            </StackPanel>

            <TextBlock Name="bescriptionNews" Grid.Column="1" Height="120" Text="RPG сборка  со свежим обновлением, интересным сюжетом и файтами дополненная модами под летнюю тематику и летниее праздники. Шейдеры мягкие и контрастные создающие атмосферу :)" Style="{StaticResource BtnText}" Margin="0 10 0 0" TextWrapping="Wrap"/>

            <Grid Margin="0 10 0 0">
                <Button x:Name="BtnLeft" Click="BtnLeft_Click" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="55" Height="65" VerticalAlignment="Center" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                    <Button.Resources>
                        <ImageSource x:Key="Img">Images/btnArrow.png</ImageSource>
                        <ImageSource x:Key="ImgTrig">Images/BtnArrowTrig.png</ImageSource>
                    </Button.Resources>
                    <Button.RenderTransform>
                        <ScaleTransform ScaleX="-1"/>
                    </Button.RenderTransform>
                </Button>

                <Grid HorizontalAlignment="Center">
                    <!-- Счетчик лайков -->
                    <TextBlock Name="countLike" Text="0" Style="{StaticResource BtnText}" 
               TextAlignment="Right" Height="30" Margin="0 0 180 0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Кнопка лайка -->
                        <ToggleButton Name="btnLike" Click="btnLike_Click" Style="{StaticResource LikeToggleButton}" 
                     IsChecked="{Binding IsLiked}"/>

                        <!-- Кнопка дизлайка -->
                        <ToggleButton Name="btnDisLike" Click="btnDisLike_Click" Style="{StaticResource DislikeToggleButton}" 
                     Margin="15 0 0 0" IsChecked="{Binding IsDisliked}"/>
                    </StackPanel>

                    <!-- Счетчик дизлайков -->
                    <TextBlock Name="countDislike" Text="0" Style="{StaticResource BtnText}" 
               TextAlignment="Left" Height="30" Margin="180 0 0 0"/>
                </Grid>

                <Button x:Name="BtnRight" Click="BtnRight_Click" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="55" Height="65" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button.Resources>
                        <ImageSource x:Key="Img">Images/btnArrow.png</ImageSource>
                        <ImageSource x:Key="ImgTrig">Images/BtnArrowTrig.png</ImageSource>
                    </Button.Resources>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>

<UserControl x:Class="launch.Views.UserControls.UserControlSubscription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launch.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="210" Height="300" Background="#FF4C1C64" Margin="0 0 15 0">
        <Grid.ToolTip>
            <ToolTip Name="tooltip" Visibility="Hidden" Placement="Center"  PlacementRectangle="0,0,210,300" Background="#8B2B8B" BorderBrush="White" BorderThickness="4">
                <TextBlock Width="180" TextWrapping="Wrap" Text="Приносим извинения, данная подписка больше не доступна для приобретения" Style="{StaticResource BtnText}"/>
            </ToolTip>
        </Grid.ToolTip>
        <Image Source="../Images/StarNether.png" Opacity="0.3" Margin="20,20,20,100"/>
        <TextBlock Text="{Binding NameSub}" Width="190" Style="{StaticResource BtnText}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Margin="0 25 0 0" FontSize="36" TextAlignment="Center"/>
        <TextBlock Name="DescriptionSub" Text="{Binding Description}" Width="190" TextWrapping="Wrap" Style="{StaticResource BtnText}" TextAlignment="Center" Margin="0 65 0 110"/>
        <TextBlock Text="{Binding Price}" Width="160" TextWrapping="Wrap" Style="{StaticResource BtnText}" TextAlignment="Center" Margin="0 195 0 0"/>
        <Button Name="btnSub" Tag="{Binding TagBtn}" Width="170" Content="{Binding BtnText}" Style="{StaticResource ImageButton}" VerticalAlignment="Bottom" Margin="0 0 0 20" Opacity="{Binding OpacityBtn}" IsEnabled="{Binding IsEnabledBtn}"/>
    </Grid>
</UserControl>

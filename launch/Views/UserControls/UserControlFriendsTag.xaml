<UserControl x:Class="launch.Views.UserControls.UserControlFriendsTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launch.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="#FF8000" BorderThickness="2" Margin="0 0 10 0">
        <TextBlock Padding="5" Text="{Binding TextTag}" Style="{StaticResource BtnText}" FontSize="18" Foreground="#FF8000" HorizontalAlignment="Center"/>
    </Border>
</UserControl>

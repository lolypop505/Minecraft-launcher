<UserControl x:Class="launch.Views.UserControls.UserControlHelpdeskMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launch.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="SPmyFriends" Margin="0 10">
            <StackPanel Background="#FF4C1C64" Orientation="Horizontal">
                <Grid>
                    <Image Name="imageTB" Height="235" Source="{Binding sourseImage}" Width="330" Stretch="Uniform"/>
                    <Button Name="btnDelete"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Tag="{Binding tagBtn}" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="60" Height="70">
                        <Button.ToolTip>
                            <ToolTip Placement="Right" PlacementRectangle="0,0,100,70" VerticalOffset="15" Background="#8B2B8B" BorderBrush="White" BorderThickness="3">
                                <TextBlock FontSize="24" Text="удалить" Style="{StaticResource BtnText}"/>
                            </ToolTip>
                        </Button.ToolTip>
                        <Button.Resources>
                            <ImageSource x:Key="Img">../Images/btnLitter.png</ImageSource>
                            <ImageSource x:Key="ImgTrig">../Images/BtnLitterTrig.png</ImageSource>
                        </Button.Resources>
                    </Button>
                </Grid>
                <StackPanel Margin="10 10 10 20" >
                    <Button Name="btnViewTelegram" Tag="{Binding userTelegram}" VerticalAlignment="Top" HorizontalAlignment="Left" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Name="userNickname" TextWrapping="Wrap" Text="{Binding user}" Style="{StaticResource BtnText}"/>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="true">
                                        <Setter TargetName="userNickname"  Property="Foreground" Value="#8B2B8B"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <ScrollViewer Height="175" VerticalScrollBarVisibility="Hidden">
                        <TextBlock Name="messageTB" Width="340" FontSize="26" Text="{Binding messageText}" Style="{StaticResource BtnText}" TextWrapping="Wrap"/>
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="launch.Views.UserControls.UserControlFriendsSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:launch.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF4C1C64" Height="90" Margin="0 0 0 10">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Image Source="../Images/menubtnUsers.png" Width="70" Margin="15 5"/>
                <StackPanel Width="480">
                    <TextBlock Text="{Binding Text1}" FontSize="24" Style="{StaticResource BtnText}" Margin="0 10 0 0"/>
                    <TextBlock Height="50" FontSize="20" Text="{Binding Text2}" Style="{StaticResource BtnText}" TextWrapping="Wrap"/>
                </StackPanel>
                <Button Tag="{Binding tagBtnAdd}" Name="btnAddFriend" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="60">
                    <Button.Resources>
                        <ImageSource x:Key="Img">../Images/BtnOk.png</ImageSource>
                        <ImageSource x:Key="ImgTrig">../Images/BtnOkTrig.png</ImageSource>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <!--<StackPanel Orientation="Horizontal" Margin="10 0" Name="stackPanel">
            </StackPanel>-->
        </StackPanel>
    </Grid>
</UserControl>

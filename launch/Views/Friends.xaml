<Page x:Class="launch.Views.Friends"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:launch.Views"
      xmlns:uc="clr-namespace:launch.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="880"
      Title="Friends">

    <Grid>
        <Grid Background="{StaticResource BG}" Panel.ZIndex="0">
            <Grid.Effect>
                <BlurEffect Radius="5"/>
            </Grid.Effect>
        </Grid>

        <Border Background="#8B2B8B" Opacity="0.5" Margin="80 130 80 60" Panel.ZIndex="0"/>
        <StackPanel>
            <StackPanel Margin="80 70 90 0" HorizontalAlignment="Left" Orientation="Horizontal">
                <RadioButton IsChecked="True" Name="BtnMyFriend" Click="BtnMyFriend_Click" Content="мои друзья" Style="{StaticResource radioBtn}" Width="200" Height="50" />
                <RadioButton Name="BtnFriendRequests" Click="BtnFriendRequests_Click" Content="заявки в друзья" Style="{StaticResource radioBtn}" Width="250" Height="50" Margin="20 0 0 0"/>
                <RadioButton Name="BtnFriendSearch" Click="BtnFriendSearch_Click" Content="поиск друзей" Style="{StaticResource radioBtn}" Width="220" Height="50" Margin="20 0 0 0"/>
            </StackPanel>
            <Grid>
                <ScrollViewer Height="350" Margin="110 40 110 0" Name="myFriendsPage" Visibility="Visible" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                    <Grid>
                        <StackPanel Name="SPmyFriends"/>
                        <TextBlock Name="NoFriendsText" Text="У вас пока нет друзей" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                 FontSize="24" Style="{StaticResource BtnText}" 
                                 Visibility="Collapsed"/>
                    </Grid>
                </ScrollViewer>

                <ScrollViewer Height="350" Margin="110 40 110 0" Name="friendRequestsPage" Visibility="Hidden" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <TextBlock Text="заявки в друзья от других пользователей: " FontSize="24" Style="{StaticResource BtnText}" Margin="0 10 0 0"/>
                        <Grid>
                            <StackPanel Name="SPfriendRequests"/>
                            <TextBlock Name="NoIncomingRequestsText" Text="-- У вас нет входящих заявок в друзья --" 
                                     FontSize="24" Style="{StaticResource BtnText}" 
                                     HorizontalAlignment="Left"
                                     Margin="0 10 0 0" Visibility="Collapsed"/>
                        </Grid>
                        <TextBlock Text="ваши заявки в друзья ожидающие принятия: " FontSize="24" Style="{StaticResource BtnText}" Margin="0 10 0 0"/>
                        <Grid>
                            <StackPanel Name="SPfriendRequestsUser"/>
                            <TextBlock Name="NoOutgoingRequestsText" Text="-- У вас нет исходящих заявок в друзья --" 
                                     FontSize="24" Style="{StaticResource BtnText}" 
                                     HorizontalAlignment="Left"
                                     Margin="0 10 0 0" Visibility="Collapsed"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Height="350" Margin="110 40 110 0" Name="friendSearchPage" Visibility="Hidden">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ник: " Style="{StaticResource BtnText}" Margin="10"/>
                        <TextBox Name="searchNicknameTB" Width="530" Style="{StaticResource TextBox}"/>
                        <Button Name="btnSearchNickname" Click="btnSearchNickname_Click" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="40" Margin="10 0 0 0">
                            <Button.Resources>
                                <ImageSource x:Key="Img">Images/BtnSearch.png</ImageSource>
                                <ImageSource x:Key="ImgTrig">Images/BtnSearchTrig.png</ImageSource>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                    <Grid Height="300">
                        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                            <StackPanel Name="SPfriendSearch"/>
                        </ScrollViewer>
                        <TextBlock Name="NoSearchResultsText" Text="Пользователи не найдены" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"
                                 FontSize="24" Style="{StaticResource BtnText}" 
                                 Visibility="Collapsed"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
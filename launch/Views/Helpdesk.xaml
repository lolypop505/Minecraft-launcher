<Page x:Class="launch.Views.Helpdesk"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:launch.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="880"
      Title="Helpdesk">

    <Grid>
        <Grid Background="{StaticResource BG}" Panel.ZIndex="0">
            <Grid.Effect>
                <BlurEffect Radius="5"/>
            </Grid.Effect>
        </Grid>

        <Border Background="#8B2B8B" Opacity="0.5" Margin="80 90 80 90" Panel.ZIndex="1"/>

        <StackPanel Margin="110 110 110 110" Panel.ZIndex="2">
            <TextBlock Text="служба поддержки" Style="{StaticResource BtnText}" FontSize="42" HorizontalAlignment="Center"/>

            <TextBlock Grid.Column="1" Height="60" Text="Если нашли ошибку или баг в моде или программе, опишите проблему и при желании прикрепите фото." Style="{StaticResource BtnText}" Margin="0 10 0 0" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock Text="Сообщение: " Style="{StaticResource BtnText}"/>
                <TextBox Name="messageTB" MaxLength="249" Width="500" Height="150" TextWrapping="Wrap" Style="{StaticResource TextBox}" Margin="10 0 0 0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock Text="Прикрепить фото: *" Style="{StaticResource BtnText}" Margin="0 5 0 0"/>
                <TextBox Name="imageTB" Width="365" Style="{StaticResource TextBox}" Margin="10 0 0 0"/>
                <Button Name="btnViewFile" Click="btnViewFile_Click" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="40" Margin="10 0 0 0">
                    <Button.Resources>
                        <ImageSource x:Key="Img">Images/BtnSearch.png</ImageSource>
                        <ImageSource x:Key="ImgTrig">Images/BtnSearchTrig.png</ImageSource>
                    </Button.Resources>
                </Button>
            </StackPanel>
            <Grid HorizontalAlignment="Center">
                <Button Content="отправить" Name="btnSend" Click="btnSend_Click" Style="{StaticResource ImageButton}"/>
            </Grid>
        </StackPanel>
        <Border Name="errorMessage" Margin="80 0" Visibility="Hidden" Height="50" VerticalAlignment="Bottom" BorderBrush="White" BorderThickness="4" Background="Transparent">
            <TextBlock Padding="17 5 0 0" Text="вес картинки не должен привышать 1 мб !" Style="{StaticResource BtnText}"/>
        </Border>
    </Grid>
</Page>

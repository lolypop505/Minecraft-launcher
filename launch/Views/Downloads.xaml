<Page x:Class="launch.Views.Downloads"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:launch.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="880"
      Title="Downloads">

    <Grid>
        <Grid Background="{StaticResource BG}" Panel.ZIndex="0">
            <Grid.Effect>
                <BlurEffect Radius="5"/>
            </Grid.Effect>
        </Grid>

        <Border Background="#8B2B8B" Opacity="0.5" Margin="80 60 80 60"/>

        <!-- Панель загрузки (изначально скрыта) -->
        <StackPanel Name="DownloadPanel" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0 0 0 10">

            <!--<Button Name="btnPause" Click="btnPause_Click" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="35" Height="35" VerticalAlignment="Center">
                --><!--<Button.Resources>
                    <ImageSource x:Key="Img">Images/BtnPause.png</ImageSource>
                    <ImageSource x:Key="ImgTrig">Images/BtnPauseTrig.png</ImageSource>
                </Button.Resources>--><!--
                <Button.ToolTip>
                    <ToolTip Placement="Left" Background="#8B2B8B" BorderBrush="White" BorderThickness="4">
                        <TextBlock Text="Пауза" Style="{StaticResource BtnText}"/>
                    </ToolTip>
                </Button.ToolTip>
            </Button>-->

            <ToggleButton Name="btnPause" Click="btnPause_Click" Style="{StaticResource PauseToggleButton}" VerticalAlignment="Center">
                <ToggleButton.ToolTip>
                    <ToolTip Placement="Right" PlacementRectangle="-10,0,50,50" Background="#8B2B8B" BorderBrush="White" BorderThickness="3">
                        <TextBlock Text="пауза/пуск" FontSize="24" Style="{StaticResource BtnText}"/>
                    </ToolTip>
                </ToggleButton.ToolTip>
            </ToggleButton>

            <Border Visibility="Visible" Margin="10 0 10 0" Panel.ZIndex="1" Height="40" VerticalAlignment="Top" BorderBrush="White" Width="450" BorderThickness="4" Background="Transparent">
                <Grid>
                    <ProgressBar Name="progressBar" Background="Transparent" Foreground="#FF8000" />
                    <TextBlock Name="statusText" HorizontalAlignment="Center" Text="--- загрузка ---" Style="{StaticResource BtnText}"/>
                </Grid>
            </Border>

            <ToggleButton Name="btnStop" Click="btnStop_Click" Style="{StaticResource StopToggleButton}" VerticalAlignment="Center">
                <ToggleButton.ToolTip>
                    <ToolTip Placement="Left" PlacementRectangle="0,0,50,50" Background="#8B2B8B" BorderBrush="White" BorderThickness="3">
                        <TextBlock Text="завершить" FontSize="24" Style="{StaticResource BtnText}"/>
                    </ToolTip>
                </ToggleButton.ToolTip>
            </ToggleButton>

            <!--<Button Name="btnStop" Click="btnStop_Click" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="35" Height="35" VerticalAlignment="Center">
                --><!--<Button.Resources>
                    <ImageSource x:Key="Img">Images/BtnStop.png</ImageSource>
                    <ImageSource x:Key="ImgTrig">Images/BtnStopTrig.png</ImageSource>
                </Button.Resources>--><!--
                <Button.ToolTip>
                    <ToolTip Placement="Left" Background="#8B2B8B" BorderBrush="White" BorderThickness="4">
                        <TextBlock Text="Остановить" Style="{StaticResource BtnText}"/>
                    </ToolTip>
                </Button.ToolTip>
            </Button>-->
        </StackPanel>

        <StackPanel Margin="100 80 100 70" Panel.ZIndex="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="370"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <Grid>
                        <TextBlock Name="nameAssembly" Text="Летний сезон" Style="{StaticResource BtnText}" FontSize="38" HorizontalAlignment="Left"/>

                        <Button Name="BtnBlocked" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="35" Height="35" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Button.Resources>
                                <ImageSource x:Key="Img">Images/BtnBlocked.png</ImageSource>
                                <ImageSource x:Key="ImgTrig">Images/BtnBlockedTrig.png</ImageSource>
                            </Button.Resources>
                            <Button.ToolTip>
                                <ToolTip Placement="Left" PlacementRectangle="0,0,50,50" Background="#8B2B8B" BorderBrush="White" BorderThickness="3">
                                    <TextBlock Width="270" FontSize="24" Name="tooltip" Text="для загрузки данной сборки требуется подписка уровня [название подписки]" TextWrapping="Wrap" Style="{StaticResource BtnText}" Margin="5 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </Grid>

                    <Image Name="imageAssembly" Source="Images/background.png"/>
                    <Grid Margin="0 20 0 0">
                        <TextBlock Text="Версия minecraft: " Style="{StaticResource BtnText}" Margin="0 10"/>
                        <TextBlock Name="minecraftVersion" Text="1.20.1.47" Style="{StaticResource BtnText}" Margin="5 10 0 10" HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="Вес сборки: " Style="{StaticResource BtnText}" Margin="0 0"/>
                        <TextBlock Name="weightAssembly" Text="2.5 ГБ" Style="{StaticResource BtnText}" Margin="5 0 0 0" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>

                <Grid Grid.Column="2">
                    <TextBlock Name="bescriptionAssembly" Grid.Column="1" Height="380" Text="RPG сборка со свежим обновлением, интересным сюжетом и файтами дополненная модами под летнюю тематику и летниее праздники. 
                           Шейдеры мягкие и контрастные создающие летнюю атмосферу :)" Style="{StaticResource BtnText}" Margin="20 0 0 0" TextWrapping="Wrap"/>
                </Grid>
            </Grid>

            <Grid>
                <Button x:Name="BtnLeft" Click="BtnLeft_Click" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="55" Height="65" VerticalAlignment="Center" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                    <Button.Resources>
                        <ImageSource x:Key="Img">Images/btnArrow.png</ImageSource>
                        <ImageSource x:Key="ImgTrig">Images/BtnArrowTrig.png</ImageSource>
                    </Button.Resources>
                    <Button.RenderTransform>
                        <ScaleTransform ScaleX="-1"/>
                    </Button.RenderTransform>
                </Button>
                <Button Name="btnDownload" Click="btnDownload_Click" Content="скачать" Style="{StaticResource ImageButton}" HorizontalAlignment="Center"/>

                <Button x:Name="BtnRight" Click="BtnRight_Click" Style="{StaticResource ImageBtn}" Template="{StaticResource btn}" Width="55" Height="65" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button.Resources>
                        <ImageSource x:Key="Img">Images/btnArrow.png</ImageSource>
                        <ImageSource x:Key="ImgTrig">Images/BtnArrowTrig.png</ImageSource>
                    </Button.Resources>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>